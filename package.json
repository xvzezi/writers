{
	"name": "writers",
	"displayName": "writers",
	"description": "extension for writers on vscode",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:.writers",
		"onCommand:extension.createBook"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "book-contents",
					"title": "Writers",
					"icon": "media/book.svg"
				}
			]
		},
		"views": {
			"book-contents": [
				{
					"id": "bookContents",
					"name": "Contents"
				},
				{
					"id": "bookTimeline",
					"name": "Time Line"
				}
			]
		},
		"commands": [
			{
				"command": "extension.createBook",
				"title": "Create Book"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.0-next.0"
	},
	"dependencies": {
		"jsonc-parser": "^2.1.0"
	}
}
